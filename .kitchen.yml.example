driver:
   name: vagrant
   network:
     - ["forwarded_port", { guest: 80, host: 8080 }]
     - ["forwarded_port", { guest: 443, host: 8443 }]
     - ["forwarded_port", { guest: 3306, host: 8306 }]
   synced_folders:
     - ["\path\to\shared\files", "/var/www", {owner: "root"}, "create: true, type: :nfs, dmode=777, fmode=777"]

provisioner:
   name: chef_zero

verifier:
   name: inspec

platforms:
   - name: centos-7.2

suites:
  - name: webserver
    run_list:
      - recipe[webserver::default]
    attributes:
      php:
        version: 7.0